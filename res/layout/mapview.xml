<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/map">

    <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />

    <RelativeLayout
            android:id="@+id/info_detail"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="#CC4e5a6b"
            android:clickable="false">
        <LinearLayout
                android:layout_width="250dip"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:text="姓名Xxx"
                    android:textColor="#FFFFFF"/>
            <TextView
                    android:id="@+id/info_company"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:textColor="#FFFFFF"
                    android:text="公司Xxx"/>
            <TextView
                    android:id="@+id/info_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:textColor="#FFFFFF"
                    android:text="电话Xxx"/>
            <TextView
                    android:id="@+id/info_address"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:textColor="#FFFFFF"
                    android:text="地址Xxx"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="110dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/navigation_button"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="22dip"
                    android:text="到这里去"
                    />
         </LinearLayout>
    </RelativeLayout>


    <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="6dip"
            android:layout_marginBottom="60dip"
            android:visibility="visible"/>
    <Button
            android:id="@+id/button2"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="36dip"
            android:layout_marginBottom="6dip"
            />
    <Button
            android:id="@+id/listButton"
            android:layout_width="90dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="112dip"
            android:layout_marginBottom="6dip"
            android:text="联系人列表"
            android:onClick="contactListButtonOnClick"
            />
    <ListView
            android:layout_width="300dip"
            android:layout_height="300dip"
            android:id="@+id/poplistView"
            android:layout_gravity="center_horizontal"
            android:cacheColorHint="#00000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dip"
            android:layout_marginBottom="60dip"
            android:divider="@color/black"
            android:dividerHeight="1dip"
            android:background="@drawable/location_tips"

            android:visibility="gone"/>

</RelativeLayout>

