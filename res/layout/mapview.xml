<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/map">

    <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />

    <RelativeLayout
            android:id="@+id/info_detail"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="#CC4e5a6b"
            android:clickable="false">
        <LinearLayout
                android:layout_width="400dp"
                android:layout_height="fill_parent"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:text="姓名Xxx"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"/>
            <TextView
                    android:id="@+id/info_company"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:textColor="#FFFFFF"
                    android:text="公司Xxx"
                    android:textSize="17sp"/>
            <TextView
                    android:id="@+id/info_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:textColor="#FFFFFF"
                    android:text="电话Xxx"
                    android:textSize="17sp"/>
            <TextView
                    android:id="@+id/info_address"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:textColor="#FFFFFF"
                    android:text="地址Xxx"
                    android:textSize="17sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dip"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/navigation_button"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:text="到这里去"
                    />
         </LinearLayout>
    </RelativeLayout>


    <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/custom_loc"
            android:visibility="visible"/>

    <LinearLayout
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                    android:id="@+id/button2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/grey_3"
                    android:textSize="17sp"
                    />
            <TextView
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/grey_2"/>
            <Button
                    android:id="@+id/listButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="联系人列表"
                    android:onClick="contactListButtonOnClick"
                    android:background="@color/grey_3"
                    android:textSize="17sp"/>
            <TextView
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/grey_2"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/exit_map_button"
                    android:background="@color/grey_3"
                    android:text="返回"
                    android:onClick="back_to_contact"
                    android:textSize="17sp"/>

            </LinearLayout>

        <ListView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:id="@+id/poplistView"
                android:layout_centerHorizontal="true"
                android:cacheColorHint="#00000000"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="60dp"
                android:divider="@color/black"
                android:dividerHeight="1dp"
                android:background="@drawable/location_tips"
                android:visibility="gone"/>

</RelativeLayout>

